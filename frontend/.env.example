# ======================================
# Luntra Frontend Environment Variables
# ======================================

# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit .env file to git (it's in .gitignore)

# ======================================
# Deployment URLs
# ======================================
# These MUST match between frontend and backend for proper connectivity

# Frontend URL (where the React app is hosted)
PLAYWRIGHT_BASE_URL=https://luntra.one

# Backend API URL (where the FastAPI server is hosted)
VITE_API_BASE=https://api.luntra.one

# Production values:
# PLAYWRIGHT_BASE_URL=https://luntra.one
# VITE_API_BASE=https://api.luntra.one

# Staging values:
# PLAYWRIGHT_BASE_URL=https://staging.luntra.one
# VITE_API_BASE=https://api-staging.luntra.one

# Local development values:
# PLAYWRIGHT_BASE_URL=http://localhost:5173
# VITE_API_BASE=http://localhost:8000

# ======================================
# Slack Integration
# ======================================
# Webhook for team notifications (CTO alerts, degradation alerts)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# CTO Slack User ID for @mentions (get from Slack user profile)
CTO_SLACK_MENTION=<@U12345678>

# ======================================
# Comet ML Integration
# ======================================
# For experiment tracking, log archival, and performance monitoring
COMET_API_KEY=your_comet_api_key_here
COMET_WORKSPACE=luntra-ai
COMET_PROJECT=luntra-frontend

# ======================================
# Performance Thresholds
# ======================================
# P95 latency threshold in milliseconds
P95_THRESHOLD=1500

# UI diff threshold as percentage
UI_DIFF_THRESHOLD=3

# DNS latency threshold in milliseconds
DNS_LATENCY_THRESHOLD=200

# ======================================
# Monitoring Configuration
# ======================================
# Continuous monitoring interval in seconds (default: 1 hour)
MONITORING_INTERVAL=3600

# Post-deployment monitoring check interval in seconds (default: 5 minutes)
POST_DEPLOYMENT_CHECK_INTERVAL=300

# Maximum consecutive failures before auto-remediation
MAX_FAILURES=3

# Uptime threshold percentage (for 24h post-deployment monitoring)
UPTIME_THRESHOLD=99.5
