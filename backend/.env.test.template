# ============================================================================
# PropIQ Test Environment Configuration
# ============================================================================
# Copy this file to .env.test and fill in your test database credentials
# This is used for integration tests ONLY - never use production credentials

# ============================================================================
# ENVIRONMENT
# ============================================================================
ENVIRONMENT=testing
DEBUG=True

# ============================================================================
# SUPABASE TEST DATABASE
# ============================================================================
# Create a separate test project in Supabase (https://app.supabase.com)
# Project name: propiq-test
# Copy these values from: Project Settings → Database → Connection string
SUPABASE_URL=https://your-test-project.supabase.co
SUPABASE_ANON_KEY=your-test-anon-key-here
SUPABASE_SERVICE_KEY=your-test-service-key-here

# ============================================================================
# JWT AUTHENTICATION (Test)
# ============================================================================
# Use a different secret for tests (can be any secure string)
JWT_SECRET=test-jwt-secret-key-for-integration-tests-must-be-at-least-64-chars
JWT_EXPIRATION_DAYS=7

# ============================================================================
# AZURE OPENAI (Test/Mock)
# ============================================================================
# For tests, you can use either:
# 1. Real Azure OpenAI (costs money but tests real integration)
# 2. Mock responses (fast and free, but doesn't test actual AI)
AZURE_OPENAI_ENDPOINT=https://luntra-openai-service.cognitiveservices.azure.com/
AZURE_OPENAI_KEY=your-test-key-or-use-production-key
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT=gpt-4o-mini

# ============================================================================
# STRIPE (Test Mode)
# ============================================================================
# Use Stripe test keys (from https://dashboard.stripe.com/test/apikeys)
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_your_webhook_secret
STRIPE_PRICE_ID=price_test_starter
STRIPE_PRICE_STARTER=price_test_starter
STRIPE_PRICE_PRO=price_test_pro
STRIPE_PRICE_ELITE=price_test_elite

# ============================================================================
# SENDGRID (Test/Mock)
# ============================================================================
# Option 1: Use a test SendGrid account
# Option 2: Leave blank to skip email sending in tests
SENDGRID_API_KEY=
FROM_EMAIL=test@propiq.test
SUPPORT_EMAIL=test@propiq.test
APP_URL=http://localhost:5173

# ============================================================================
# WEIGHTS & BIASES (Disabled for Tests)
# ============================================================================
WANDB_API_KEY=
WANDB_MODE=disabled

# ============================================================================
# INTERCOM (Disabled for Tests)
# ============================================================================
INTERCOM_ACCESS_TOKEN=
INTERCOM_API_KEY=

# ============================================================================
# CORS (Local Development)
# ============================================================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# RATE LIMITING (Relaxed for Tests)
# ============================================================================
RATE_LIMIT_ENABLED=False
